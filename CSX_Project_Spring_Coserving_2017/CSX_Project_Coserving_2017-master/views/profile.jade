      .row
        .col-lg-12.text-center.coserving-main-info
          .panel.panel-coserving
            .panel-heading Create List
            |                     
            .panel-body
              each ur_csevent_create in urcreate 
                a#coserving-get-user-createevent(href='/eventinfo/#{ur_csevent_create}')= ur_csevent_create
                <br>


      // pairlist /.row
      .row
        .col-lg-12.text-center.coserving-main-info
          .panel.panel-coserving
