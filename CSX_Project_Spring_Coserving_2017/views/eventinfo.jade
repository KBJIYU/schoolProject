              a(href='/logout') 登出
        // /.navbar-collapse
      // /.container
    // Page Content
    .container
      // event info
      .row
        .col-lg-12.text-center.coserving-main-info
          .panel.panel-coserving
            .panel-heading Event Info
            .panel-body
              .row
                .col-lg-offset-3.col-md-offset-3.col-sm-offset-3.col-lg-3.col-md-3.col-sm-3.col-xs-12
                  .event-creator-photo
                    img#event-photo-id(src='/static/img/CoServingTiger.png')
                  .coserving-event-info.info-eventcreator
                    strong 啾啾發起人 
                    a#coserving-get-user-id(href='/creatorprofile/#{cseventinfo.eventcreator}')= cseventinfo.eventcreator
                .col-lg-6.col-md-6.col-sm-6.col-xs-12
                  .event-getinfo
                    .coserving-event-info.info-eventstate
                      strong 配對狀態
                      span#show-eventstate
                        if cseventinfo.eventstate == 1 
                          td#CS-event-state= '進行中!' 
                        else 
                          td#CS-event-state=  '已結束'
                  .event-getinfo
                    .coserving-event-info.info-eventtype
                      strong 配對類型
                      span#show-eventtype= cseventinfo.eventtype
                  .event-getinfo
                    .coserving-event-info.info-eventpaircount
                      strong 目前人數
                      span#show-eventpeople= cseventinfo.eventpaircount
                  .event-getinfo
                    .coserving-event-info.info-eventpeople
                      strong 需求人數
                      span#show-eventpeople= cseventinfo.eventpeople
                  .event-getinfo
                    .coserving-event-info.info-eventmoney
                      strong 需求點數
                      span#show-eventmoney= cseventinfo.eventpoint
                  .event-getinfo
                    .coserving-event-info.info-eventtime
                      strong 有效時間
                      span#show-eventtime= cseventinfo.eventtime
                  .form
                    form.pair-form(action='', method='post')
                      a.coserving-link-button(href='/') RETURN
                      if cseventinfo.eventstate == 1 
                        button.coserving-link-button.coserving-pair-button(type='submit', value='CREATE',onclick="return confirm('確認配對?');return false;")  GO PAIR!
                      else 
